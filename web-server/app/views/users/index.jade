extends ../layout

block content
  h2 #{count} Users

  table.users
    thead
      th NAME
      th PASSWORD
      th
      th
    each user in users
      tr
        td
          a(href="/users/#{user.id}") #{user.name}
        td= user.password
        td
          a(href="users/#{user.id}/edit") edit
        td
          form(action="/users/#{user.id}?_method=DELETE" method="POST")
            input(type="submit" value="x")



  a(href="/users/new") add a user
